{
  "name": "jgodeyne/invoice",
  "description": "Invoice app",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": { "InvoiceApp\\": "src/" }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=phpcs.xml",
    "lint": "find . -name '*.php' -not -path './vendor/*' -not -path './.github/*' -not -path './node_modules/*' -exec php -l {} \\;",
    "migrate": "php bin/migrate.php"
  }
}
